{
	"name": "oskarlh-typescript-project",
	"repository": "https://github.com/oskarlh/oskarlh-typescript-project.git",
	"version": "1.0.0",
	"main": "dist/index.js",
	"type": "module",
	"author": "Oskar Larsson HÃ¶gfeldt <oskar@oskar.pm>",
	"license": "MIT",
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.18",
		"@swc/jest": "^0.2.23",
		"@types/jest": "^29",
		"@types/node": "^20",
		"@typescript-eslint/eslint-plugin": "^6.2",
		"@typescript-eslint/parser": "^6.2",
		"eslint": "^8.5.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^5",
		"jest": "^29.3.1",
		"nodemon": "^3",
		"prettier": "^3",
		"ts-jest": "^29.0.3",
		"typescript": "~5.1"
	},
	"scripts": {
		"build": "tsc",
		"build-and-start": "tsc && npm run start",
		"build-and-verify": "npm run test-with-typechecking --ci && npm run lint && npm run build",
		"build-without-typechecking": "swc -C exclude=.test.ts -d dist -s true -- src",
		"lint": "eslint .",
		"start": "node --enable-source-maps --require=./suppressExperimentalWarnings.cjs dist/index.js",
		"start-debug": "node --nolazy --inspect --enable-source-maps --require=./suppressExperimentalWarnings.cjs dist/index.js",
		"test": "jest",
		"test-with-typechecking": "jest --config=jest.config.with-typechecking.js",
		"watch": "nodemon"
	},
	"dependencies": {
		"dotenv": "^16.0.3"
	}
}
